<UserControl x:Class="WR_Player.Views.CompactModeRestoreButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WR_Player.Views"
             mc:Ignorable="d">

    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="IconsResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Button x:Name="restoreButton"
            ToolTip="Restore"
            Focusable="False"
            Content="{StaticResource CompactModeDisableIcon}"
            Background="{x:Null}"
            BorderBrush="{x:Null}"
            Padding="0"
            Width="20" Height="20"
            Click="Button_Click_Restore"
            Margin="0 18 7 0"/>

    
</UserControl>
