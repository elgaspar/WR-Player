<UserControl x:Class="WR_Player.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Converters="clr-namespace:WR_Player.Views.Converters"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform">


    <UserControl.Resources>
        <ResourceDictionary>

            <Style x:Key="seekingBarSliderStyle"
                       TargetType="{x:Type Slider}"
                       BasedOn="{StaticResource MetroSlider}">
                <Style.Triggers>
                    <MultiDataTrigger>
                        <MultiDataTrigger.Conditions>
                            <Condition Binding="{Binding LoadedItem.Type}" Value="Url"/>
                            <Condition Binding="{Binding IsPlaying}" Value="True" />
                        </MultiDataTrigger.Conditions>
                        <Setter Property="Visibility" Value="Collapsed"/>
                    </MultiDataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="seekingProgressBarStyle"
                       TargetType="{x:Type ProgressBar}"
                       BasedOn="{StaticResource MetroProgressBar}">
                <Style.Triggers>
                    <DataTrigger Binding="{Binding Visibility, ElementName=seekingBarSlider}" Value="Visible">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>

            <Style x:Key="controlHiddenStyle"
                       TargetType="{x:Type Control}">
                <Setter Property="Visibility" Value="Collapsed"/>
            </Style>

        </ResourceDictionary>
    </UserControl.Resources>
    

    <StackPanel>

        <Grid Margin="5 0 5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="47"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Status}"
                       FontStyle="Italic"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="1"
                       Text=":"
                       FontStyle="Italic"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            
            <TextBlock Grid.Column="2"
                       Text="{Binding LoadedItem.Title}"
                       ToolTip="{Binding LoadedItem.Title}"
                       FontSize="14"
                       FontWeight="DemiBold"
                       TextTrimming="CharacterEllipsis"
                       Margin="10 0 0 0"/>

            <Grid.Resources>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MetroTextBlock}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPlaying}" Value="False">
                            <Setter Property="Visibility" Value="Hidden" />
                        </DataTrigger>                       
                    </Style.Triggers>
                </Style>

                

            </Grid.Resources>
        </Grid>


        <Slider x:Name="seekingBarSlider"
                IsEnabled="{Binding IsPlaying}"
                Style="{StaticResource seekingBarSliderStyle}"
                Value="{Binding PositionInSeconds}"
                ToolTip="{Binding PositionInSeconds, Mode=OneWay, Converter={Converters:SecondsToStringConverter}}"
                Focusable="False"
                Maximum="{Binding DurationInSeconds, Mode=OneWay}"
                IsMoveToPointEnabled="True"
                Controls:SliderHelper.ThumbFillDisabledBrush="#FF7F7F7F"
                Controls:SliderHelper.TrackFillDisabledBrush="#FF9D9D9D"
                Controls:SliderHelper.ThumbFillHoverBrush="#FF7F7F7F"
                Controls:SliderHelper.TrackValueFillDisabledBrush="{DynamicResource AccentColorBrush}"
                Margin="5"/>

        <ProgressBar x:Name="seekingProgressBar"
                     Style="{StaticResource seekingProgressBarStyle}"
                     IsIndeterminate="True"
                     Height="10"
                     Margin="5 8 5 8"/>



        <StackPanel Orientation="Horizontal">

            <Button x:Name="previousButton"
                    Cal:Message.Attach="Previous"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerPreviousIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Button x:Name="playButton"
                    Cal:Message.Attach="Play"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerPlayIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Button x:Name="stopButton"
                    Cal:Message.Attach="Stop"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerStopIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Button x:Name="nextButton"
                    Cal:Message.Attach="Next"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerNextIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Slider x:Name="volumeSlider"
                    Style="{DynamicResource FlatSlider}"
                    Value="{Binding Volume}"
                    ToolTip="Volume"
                    Focusable="False"
                    Controls:SliderHelper.EnableMouseWheel="MouseHover"
                    IsMoveToPointEnabled="True"
                    Maximum="0.99"
                    SmallChange="0.05"
                    VerticalAlignment="Center"
                    Width="125"
                    Height="15"
                    Margin="5"/>

        </StackPanel>

    </StackPanel>


</UserControl>
