<UserControl x:Class="WR_Player.Views.PlayerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:Cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="IconsResourceDictionary.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    

    <StackPanel>

        <Grid Margin="5 0 5 0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="48"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="{Binding Status}"
                       FontStyle="Italic"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Center"/>
            <TextBlock Grid.Column="1"
                       Text=":"
                       FontStyle="Italic"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"/>
            <TextBlock Grid.Column="2"
                       Text="{Binding LoadedItem.Title}"
                       ToolTip="{Binding LoadedItem.Title}"
                       FontSize="14"
                       FontWeight="DemiBold"
                       TextTrimming="CharacterEllipsis"
                       Margin="10 0 0 0"/>

            <Grid.Resources>
                <Style TargetType="{x:Type TextBlock}" BasedOn="{StaticResource MetroTextBlock}">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsPlaying}" Value="False">
                            <Setter Property="Visibility" Value="Hidden" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
        </Grid>

        <StackPanel Orientation="Horizontal">

            <Button x:Name="previousButton"
                    Cal:Message.Attach="Previous"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerPreviousIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Button x:Name="playButton"
                    Cal:Message.Attach="Play"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerPlayIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Button x:Name="stopButton"
                    Cal:Message.Attach="Stop"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerStopIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Button x:Name="nextButton"
                    Cal:Message.Attach="Next"
                    Style="{DynamicResource MahApps.Metro.Styles.MetroCircleButtonStyle}"
                    Content="{StaticResource PlayerNextIcon}"
                    Focusable="False"
                    Padding="0"
                    Width="40" Height="40"
                    Margin="5"/>

            <Slider x:Name="volumeSlider"
                    Style="{DynamicResource FlatSlider}"
                    Value="{Binding Volume}"
                    ToolTip="Volume"
                    Controls:SliderHelper.EnableMouseWheel="MouseHover"
                    IsMoveToPointEnabled="True"
                    Maximum="0.99"
                    SmallChange="0.05"
                    VerticalAlignment="Center"
                    Width="125"
                    Height="15"
                    Margin="5"/>

        </StackPanel>

    </StackPanel>


</UserControl>
