<UserControl x:Class="WR_Player.Views.CompactTitleBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WR_Player.Views"
             mc:Ignorable="d" 
             
             Visibility="Collapsed">
    
    
    <StackPanel Orientation="Horizontal">

        <local:CompactButton ToolTip="Restore"
                             Click="CompactButton_Click_Restore">
            <local:CompactButton.Icon>
                <local:IconContentControl IconWidth="14"
                                          IconHeight="14"
                                          DataPath="{StaticResource CompactModeDisableIconPath}"/>
            </local:CompactButton.Icon>
        </local:CompactButton>

        <local:CompactButton ToolTip="Exit"
                             Click="CompactButton_Click_Exit">
            <local:CompactButton.Icon>
                <local:IconContentControl IconWidth="14"
                                          IconHeight="14"
                                          DataPath="{StaticResource CompactModeExitIconPath}"/>
            </local:CompactButton.Icon>
        </local:CompactButton>
    </StackPanel>
    
    
</UserControl>
